<h1>People of Color Killed by Police</h1>
<h3><%#= @articles.size %> events on the calendar below:</h3>
<div id="calendar"></div>
  <script type="text/javascript">
    $(document).ready(function() {
     $("#calendar").fullCalendar({
       header: "header",
       left: "prev,next today",
       center: "title",
       right: "month,agendaWeek,agendaDay",
       defaultView: "month",
       height: 500,
       slotMinutes: 15,
       events: "/calendar/get_events",
       timeFormat: "h:mm t{ - h:mm t} ",
       dragOpacity: "0.5"
      });
    });
  </script>