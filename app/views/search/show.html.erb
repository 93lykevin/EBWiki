<!-- Since this is the homepage,the meta tag information for this page is set as the default values. -->

<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="page-header"><%= "Your search has returned #{@cases.size} results." %></h2>
      <div id='front-gallery'>
        <%= render partial: 'cases/thumbnail', layout: "cases/index_thumbnail", collection: @cases, as: :this_case %>
      </div>
      <%= paginate @cases %>
      <p><%= page_entries_info @cases %></p>
    </div>
  </div>
</div>
