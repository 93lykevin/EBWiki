<%= image_tag(@article.avatar.large_avatar) %>
<div class="row">
	<div class = "btn-group">
		<%= link_to "Back", root_path, class: "btn btn-default" %>
		<% if user_signed_in? %>
			<%= link_to "Edit", edit_article_path(@article), class: "btn btn-default" %>
			<%#= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Are you sure you want to remove this?"}, class: "btn btn-default" %>
			<% if (follow = current_user.follows.find_by_followable_id(@article.id)) %>
			    <%= link_to 'Unfollow', article_follow_path(@article, follow), :confirm => "Are you sure you want to unfollow this article?", :method => :delete %>
		    <% else %>
		      <%= link_to 'Follow', article_follows_path(@article), :method => :post %>
		    <% end %>
		<% end %>
	</div>
</div>
<h1><%= @article.title %><%= @article.age ? ", #{@article.age}" : "" %><h1>
<%= social_share_button_tag("Take a look at what I just found on BlackOpsWiki:") %>
<p style="font-size: 50%;">Incident date: <%= @article.date.to_s %></p>
<p style="font-size: 50%;">Article last updated: <%= @article.updated_at %></p>
<p style="font-size: 50%;"><%= raw @article.content %></p>
<% if @officers.length > 0 %>
	<h4>Officers involved:</h4>
	<% @officers.each do |officer| %>
		<%= link_to "#{officer.title} #{officer.first_name} #{officer.last_name}", officer %>
	<% end %>
<% end %>
<% if @article.video_url.to_s != "" %>
	<div class="embed-container">
			<%= embed(@article.video_url) %>
	</div>
<% end %>
<p style="font-size: 50%;"><%= link_to 'See history of this article', articles_history_path(@article) %><p>

<h4>Additional Resources:</h4>
<div class = "background-links">
	<% @article.links.each do |link| %>
		<%= link_to link.url, "#{link.url}" %>
		</br>
	<% end %>
</div>

<script type="text/javascript">
	$(document).ready(function(){
	    $('[data-toggle="popover"]').popover();   
	});
</script>